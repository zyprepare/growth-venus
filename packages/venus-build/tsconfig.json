{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
